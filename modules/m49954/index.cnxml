    <para id="import-auto-id1165243827286">Here:</para>
    <figure id="import-auto-id1165241040542">
      <media id="import-auto-id1165242709061" alt="">
        <image mime-type="image/png" src="../../media/graphics9-da93.png" height="43" width="543"/>
      </media>
